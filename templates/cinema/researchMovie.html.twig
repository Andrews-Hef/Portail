{% extends 'base.html.twig' %}

{% block title %}Resultat correspondant{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <br><br><br><br>
    {% for item in researchResults %}
        <div class= "card-columms text-center mx-2"  style ="display: inline-block">
            <div class="card " style="width: 18rem;">
                <h4 class="text-primary">{{ item.title }}</h4> 
                <img src="https://image.tmdb.org/t/p/original{{item.poster_path}}" > 
                <div class="card-footer">
                    <small class="text-muted">
                        <a href="{{ path('cinema.MovieView',{id:item.id}) }}">cliquez ici </a>
                    </small>
                </div>
            </div>
        </div>

    {% endfor %}

{% endblock %}