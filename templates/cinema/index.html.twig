{% extends 'base.html.twig' %}

{% block title %}Hello CinemaController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <br><br><br><br>
    <h2>Actuellement au cinéma</h2>
    {% for item in nowPlaying %}
        <div class= "card-columms text-center mx-2"  style ="display: inline-block">
            <div class="card " style="width: 18rem;">
                <h4 class="text-primary">{{ item.title }}</h4> 
                <img src="https://image.tmdb.org/t/p/original{{item.poster_path}}" > 
                <div class="card-footer">
                    <small class="text-muted">
                        <a href="{{ path('cinema.MovieView',{id:item.id}) }}">cliquez ici </a>
                    </small>
                </div>
            </div>
        </div>

    {% endfor %}

<div class="progress">
    <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<h2>quelqu'un de nos cinémas</h2>
   {% for item in allCinema %}
    <div class= "card-columms text-center mx-2"  style ="display: inline-block">
        <div class="card " style="width: 18rem;">
            <h4 class="text-primary">{{ item.fields.nom }} </h4>   
        </div>
    </div> 
    {% endfor %} 

</div>

{% endblock %}