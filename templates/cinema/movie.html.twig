{% extends 'base.html.twig' %}

{% block title %}Hello CinemaController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <br><br><br><br>

    <h2>{{ Movie.title }}</h2>  

        <div class= "container"  style ="display: inline-flex">
            <div class="" style="">
              <h4 class="text-primary"></h4> 
              <img style="max-height:25%" src="https://image.tmdb.org/t/p/original{{Movie.poster_path}}">
              <div class="col-md-6" style="margin-top:-10%; margin-left: 30%">
                <h3> synospis</h3>
                <p class="text-secondary" style="" >{{Movie.overview}}</p>
              </div>
              <div class="col-md-6" style="margin-top:-15%; margin-left: 30%" >
                <h3> genres</h3>
                {% for genre in Movie.genres %}
                  <ul>{{ genre.name }}</il>
                {% endfor %}
              </div>
            </div>
        </div>

    <div class= "d-flex align-items"  style ="">
      <h3> reserver une seance a {{ cinema.nom }}!</h3>

      <table>
        <ul> calendrier des seances: </ul>
        {% for daySchedule in weekSchedule %}
            <tr class=""> 
              <td>
                {{daySchedule['date'].format('d/m/Y')}}  :
              </td>

              {% for seance in daySchedule['times'] %}
                <td> 
                  {% set  d = seance.format('Y-m-d')~" "~ seance.format('H:i') %}
                  <a type="button" class="btn btn-primary" href="{{ path('cinema.booking',{seance : d , titre:Movie.title }) }}">  {{ seance.format('H:i') }} </a>
                </td>
              {% endfor %}
            </tr>
        {% endfor %}
      </table>
    </div>
</div>


{% endblock %}